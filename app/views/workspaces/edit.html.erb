<h1>Edit Availability for <%= @workspace.name %></h1>
<%= form_with(model: @workspace, url: availability_workspace_path(@workspace), local: true) do |form| %>
  <div>
    <%= form.label :available_from %><br>
    <%= form.date_select :available_from %>
  </div>
  <div>
    <%= form.label :available_to %><br>
    <%= form.date_select :available_to %>
  </div>
  <div>
    <%= form.submit 'Update Availability' %>
  </div>
<% end %>
<%= link_to 'Back', @workspace %>
