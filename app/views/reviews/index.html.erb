<h1>Reviews for <%= @workspace.name %></h1>

<%= link_to 'New Review', new_workspace_review_path(@workspace) %>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Comment</th>
      <th>Reviewer</th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.comment %></td>
        <td><%= review.user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', workspace_path(@workspace) %>
