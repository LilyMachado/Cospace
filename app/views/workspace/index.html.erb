<h1>Workspaces</h1>

<div class="actions">
  <%= link_to 'New Workspace', new_workspace_path, class: 'btn btn-primary' %>
</div>

<table class="workspaces-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Price</th>
      <th>Availability</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @workspaces.each do |workspace| %>
      <tr>
        <td><%= workspace.name %></td>
        <td><%= workspace.description %></td>
        <td><%= workspace.location %></td>
        <td><%= workspace.price %></td>
        <td><%= workspace.available_from %></td>
        <td><%= link_to 'Show', workspace, class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_workspace_path(workspace), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Remove', workspace, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
