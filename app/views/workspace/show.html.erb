<div class="container mt-5">
  <div class="card p-4">
    <h1 class="title"><%= @workspace.name %></h1>

    <div class="workspace-details mt-4">
      <p class="workspace-description">
        <strong>Description:</strong>
        <%= @workspace.description %>
      </p>

      <p class="workspace-location">
        <strong>Location:</strong>
        <%= @workspace.location %>
      </p>

      <p class="workspace-price">
        <strong>Price:</strong>
        <%= @workspace.price %>
      </p>

      <p class="workspace-availability">
        <strong>Availability:</strong>
        <%= @workspace.availability %>
      </p>

      <p class="workspace-amenities">
        <strong>Amenities:</strong>
        <%= @workspace.amenities %>
      </p>
    </div>

    <div class="actions mt-4">
      <%= link_to 'Edit', edit_workspace_path(@workspace), class: 'btn btn-warning' %>
      <%= link_to 'Back', workspaces_path, class: 'btn btn-secondary' %>

